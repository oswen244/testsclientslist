<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="loginEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/edittext_round</item>
        <item name="android:layout_width">@dimen/editWidth</item>
        <item name="android:layout_height">@dimen/editHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="buttonLarge">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:background">@drawable/buttons</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/colorErrorText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="cardPersonName">
        <item name="android:textSize">@dimen/card_name_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="cardPersonPhone">
        <item name="android:drawableStart">@drawable/ic_phone</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
